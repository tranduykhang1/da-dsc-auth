{
  "name": "dsc-auth",
  "version": "1.0.0",
  "description": "This is a package for calling to DSC service",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tranduykhang1/nestjs-base-repository"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "test": "jest"
  },
  "author": "Cristian Tran",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
